@model List<BurgerViewModel>

<a class="btn btn-dark">Add new</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
        @for(var i=0; i<Model.Count; i++)
        {
            <tr>
                <th>@(i+1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@Model[i].Id" class="btn btn-info">Details</a>
                    <a class="btn btn-primary">Edit</a>
                    <a class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>